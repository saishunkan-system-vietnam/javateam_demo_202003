<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vn.de.example.parkingregistration.model.mapper.AppUserModelMapper">

        <select id="findUserAccount" parameterType="String" resultMap="userAppMap">
              select * from app_user where user_name = '${name}'
        </select>

        <select id="findAllUser" resultMap="userAppMap">
              select * from app_user
        </select>

        <select id="findById" parameterType="Long" resultMap="userAppMap">
              select * from app_user where user_id = #{userId}
        </select>

        <resultMap type="AppUser" id="userAppMap">
              <id column="user_id" property="userId"/>
              <result column="user_name" property="userName"/>
              <result column="encryted_password" property="encrytedPassword"/>
              <result column="enabled" property="enabled"/>
        </resultMap>
</mapper>
